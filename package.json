{
  "scripts": {
    "clean": "rm -rf dist/*",
    "build": "go run *.go",
    "watch-ts": "swc src -d dist -s -w",
    "watch-css": "postcss src/**/*.css --base src --dir dist -w",
    "serve": "http-server dist",
    "watch": "concurrently --kill-others \"yarn:watch-ts\" \"yarn:watch-css\" \"yarn:serve\""
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.208",
    "autoprefixer": "^10.4.7",
    "chokidar": "^3.5.3",
    "concurrently": "^7.2.2",
    "cssnano": "^5.1.12",
    "http-server": "^14.1.1"
  },
  "license": "MIT"
}
